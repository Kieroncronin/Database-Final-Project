doctype html
html
    head 
        title Faculty Page
        style.
            body { font-family: Arial, sans-serif; margin: 20px; }
            table { border-collapse: collapse; margin-bottom: 25px; width: 100%; }
            th, td { border: 1px solid #ccc; padding: 8px; text-align: left; }
            th { background-color: #eee; }
            h2 { margin-top: 30px; }
            .btn { padding: 4px 10px; border: none; border-radius: 3px; cursor: pointer; }
            .btn-edit { background-color: #007bff; color: white; }

    body
        p Your ID is: #{faculty.FacSSN}
        p Your role is: Faculty
        a(href="/") Back

        h2 Courses You Teach
        - var safeOfferings = offerings || []
        - if (safeOfferings.length === 0)
            p You are not teaching any courses.
        - else
            table
                thead
                    tr
                        th Offering #
                        th Course #
                        th Term
                        th Year
                        th Edit Grades
                tbody
                    - for (var i = 0; i < safeOfferings.length; i++)
                        - var row = safeOfferings[i]
                        tr
                            td #{row.OfferNo}
                            td #{row.CourseNo}
                            td #{row.OffTerm}
                            td #{row.OffYear}
                            td
                                a.btn.btn-edit(href=`/faculty/offering?facid=${faculty.FacSSN}&offerno=${row.OfferNo}`) Edit
